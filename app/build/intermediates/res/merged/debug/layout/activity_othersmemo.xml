<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/btn_cafe"
        android:text="카페"
        android:onClick="onClickCafe"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/btn_food"
        android:text="식당"
        android:onClick="onClickFood"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/btn_culture"
        android:text="영화관/공연장"
        android:onClick="onClickTheater"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/btn_shop"
        android:text="옷가게"
        android:onClick="onClickShop"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:id="@+id/btn_public"
        android:text="공공시설"
        android:onClick="onClickPublic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:text="뒤로가기"
        android:onClick="onBack"/>

</LinearLayout>